<%- include('partials/_header'); -%>
<div class="container">
    <div class="row">
        <div class="col-md12">
            <!--formulario-->
            <div class="card">
              <div class="card-body">
                <form action="/add" method="post"> 
                  <div class="form-group">
                    <input type="text" name=title placeholder="inserta un titulo" class="form-control" value="<%=task.title %>">
                  </div>
                  <div class="form-group">
                    <textarea name="description"  cols="80" class="form-control" placeholder="inserta una descripcion"><%=task.description %>
                    </textarea>
                  </div>
                  <button type="submit" class="btn btn-primary btn-block">
                    Agregar tarea
                  </button>
                </form>
              </div>
            </div>
            
        </div>
    </div>
</div>
<%- include('partials/_footer'); -%>
